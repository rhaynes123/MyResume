        <input class="form-control " type="text" name="name" placeholder="Name" value="" /><br>
    </div>

    <div class="col-sm-4 form-group">
        <input class="form-control" type="text" name="phone" placeholder="Phone" value="" /><br>
    </div>
    <div class="col-sm-4 form-group">
        <input class="form-control" type="text" name="emailAddress"placeholder="Email" value="" /><br>
    </div>

    <textarea class="form-control" id="comments" name="messages" placeholder="Talk to us" rows="5"></textarea><br>
    <div class="row">
        <div class="col-sm-12 form-group">
            <button class="btn btn-default pull-right" onclick="SendingEmailOnClick"  type="submit">Send</button>
        </div>
    </div>

</form>
