@page
@using Microsoft.AspNetCore.Mvc.RazorPages

@model ContactModel
@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"]</h2>
<h3>@Model.ContactMessage</h3>


<form method="POST" action="" onsubmit="showResponse()">
